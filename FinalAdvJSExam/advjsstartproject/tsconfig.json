{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./public/js",
    "rootDir": "./ts-src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES6"]
  },
  "include": ["ts-src/**/*"]
}
